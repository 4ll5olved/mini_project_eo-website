generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum role {
  admin
  client
}

model user {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  email     String   @unique
  password  String
  role      role     @default(client)
  createdAt DateTime @default(now())
  event     event[]

  @@map("users")
}

model admin {
  id        Int     @id @default(autoincrement())
  name      String
  password  String
  role      role    @default(admin)
  dashboard event[]

  @@map("administrator")
}

model event {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  category    String
  dateTime    DateTime
  overview    String?
  quota       Int
  EO          String?
  price       Decimal  @db.Decimal(18, 2)
  createdAt   DateTime @default(now())
  updateAt    DateTime

  ticket ticket[]

  user  user  @relation(fields: [id], references: [id], onDelete: Cascade, map: "event_user_fkey")
  admin admin @relation(fields: [id], references: [id], onDelete: Cascade, map: "event_admin_fkey")

  @@map("event")
}

model ticket {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  price       Float?

  event event @relation(fields: [id], references: [id], onDelete: Cascade)
}
